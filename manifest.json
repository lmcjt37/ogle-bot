{
	"manifest_version": 2,

	"name": "Gazer App",
	"description": "Gazes at the Appcelerator Q&A top 100 and retrieves information related to the user you are watching.",
	"version": "1.0",

	"background": {
		"scripts": ["background.js", "jquery-1.9.1.min.js"],
		"persistant": false
	},
	"browser_action": {
		"default_popup": "popup.html",
		"default_icon": {
			"19": "icon_19.png",
			"38": "icon_38.png"
		}
	},
	"content_scripts": [ 
		{
			"js": [ 
				"jquery-1.9.1.min.js", 
				"popup.js"
			],
			"matches": [ 
				"http://*/*", 
				"https://*/*"
			]
		}
	],
	"icons": {
		"16": "icon_16.png",
		"48": "icon_48.png",
		"128": "icon_128.png"
	},
	"permissions": [ 
		"alarms",
		"management",
		"tabs",
		"https://developer.appcelerator.com/questions/top-100-experts",
		"https://developer.appcelerator.com/*"
	]
}